# Environment Configuration Example
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=sqlite:./plumingeagle.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/plumingeagle
# For MySQL: DATABASE_URL=mysql://user:password@localhost:3306/plumingeagle

# API Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_BACKEND=false

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_ROUNDS=12

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Application Settings
REACT_APP_COMPANY_NAME=Pluming Eagle Lodge
REACT_APP_COMPANY_TAGLINE=Empowering The Next Generation
REACT_APP_LOGO_PATH=/images/pellogo.png

# Development Settings
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=info

# Production Settings (uncomment for production)
# REACT_APP_DEBUG=false
# REACT_APP_LOG_LEVEL=error
